            <button value="x" id="usun">X</button>
          </li>
        <% }); %>
      </ul>

    <form action ="/msg/" method="post">
    dodaj swoją książke  <input id="frontmessage" type="text" name="frontmessage" ></input>
    dodaj autora książki  <input id="autor" type="text" name="frontmessage" ></input>
    <input type="submit" value="ok"></input>
    </form>
  </div>
</main> 

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>