<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">

    <h2>Ksiazki</h2>


    <ul>
        <% ksiazka.forEach(function(ksiazka) { %>
          <li>
            Nazwa Ksiązki:<strong><%= ksiazkaautor %></strong>
